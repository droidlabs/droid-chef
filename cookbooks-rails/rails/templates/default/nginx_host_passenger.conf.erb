# <%= @app_name %> - <%= @web_urls %>
server {
  listen 80<%= ' default' if @default %>;
  client_max_body_size 4G;
  server_name <%= @web_urls %>;

  # Block bots who like track urls (php usually)
  location ~ \.php$ {
    deny  all;
  }
  root /data/<%= @app_name %>/current/public;

  location ~ ^/(images|javascripts|stylesheets|system)/  {
    error_page 404 /404.html;
  }
  location = /500.html {
    root /data/<%= @app_name %>/current/public;
  }

  passenger_enabled on;
  passenger_min_instances <%= @app_workers %>;
  rails_env <%= @app_env %>;

  access_log  /data/<%= @app_name %>/shared/log/nginx.access.log;
  error_log   /data/<%= @app_name %>/shared/log/nginx.error.log;
}
<% if @ssl_support %>
server {
  listen 443;
  client_max_body_size 4G;
  server_name <%= @web_urls %>;

  # Block bots who like track urls (php usually)
  location ~ \.php$ {
    deny  all;
  }
  root /data/<%= @app_name %>/current/public;

  location ~ ^/(images|javascripts|stylesheets|system)/  {
    error_page 404 /404.html;
  }
  location = /500.html {
    root /data/<%= @app_name %>/current/public;
  }

  passenger_enabled on;
  passenger_min_instances 1;
  rails_env <%= @app_env %>;

  access_log  /data/<%= @app_name %>/shared/log/nginx.access.log;
  error_log   /data/<%= @app_name %>/shared/log/nginx.error.log;
  ssl on;
  ssl_certificate <%= node[:passenger][:production][:path] %>/ssl/<%= @app_name %>.crt;
  ssl_certificate_key <%= node[:passenger][:production][:path] %>/ssl/<%= @app_name %>.key;
  ssl_protocols SSLv3 TLSv1;
  ssl_ciphers ECDHE-RSA-AES256-SHA384:AES256-SHA256:RC4:HIGH:!MD5:!aNULL:!EDH:!AESGCM;
  ssl_prefer_server_ciphers on;
}
<% end %>