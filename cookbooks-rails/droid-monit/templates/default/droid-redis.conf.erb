# redis
check process redis with pidfile <%= node[:redis][:pid_file] %>
  start program = "/usr/sbin/service redis_prime start"
  stop  program = "/usr/sbin/service redis_prime stop"
  if failed host localhost port <%= node[:redis][:port] %> then restart
  if 5 restarts within 5 cycles then timeout
  group redis

check file dump.rdb with path <%= node[:redis][:dump_file] %>
  if size > 100 MB then alert
