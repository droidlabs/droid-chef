{
  // This is the list of the recipes that are going to be cooked.
  "run_list": [
    "recipe[droid-admin]",    // install mc, htop, and more pkg
    "recipe[locale]",         // add locale LC_ALL = en_US.UTF8
    "recipe[deployer_user]",
    "recipe[sudo]",
    "recipe[droid-monit]",
    "recipe[ruby_build]",
    "recipe[droid-rbenv]",
    "recipe[apt]",
    "recipe[build-essential]",
    "recipe[ohai]",
    "recipe[git]",
    "recipe[openssl]",
    "recipe[security]",
    "recipe[imagemagick::devel]",
    "recipe[droid-redis]",
    "recipe[nginx::daemon]",
    "recipe[nginx::redirects]",

    "recipe[droid-mysql]",      //wrapper-cookbook, change settings MySQL here !!
    "recipe[droid-postgresql]", //wrapper-cookbook, change settings postresql here !!

    //"recipe[faye]",
    "recipe[droid-backup]",         // don't forget to add configs at the bottom
    "recipe[java::oracle]",
    "recipe[droid-elasticsearch]",
    //"recipe[mongodb]",

    "recipe[droid-rabbitmq]",
    "recipe[rails]",
    "recipe[droid-newrelic]"
  ],

  // Global deploy user
  //-------------------
  "deploy_user": {
    "username": "ninja",
    "password": "Droid123",			  // Set new password
    "ruby_version": "2.1.3",                      // Global rbenv version
    "database_host": "localhost",
    "database_username": "ninja",                 // Superuser {postgresql}
    "database_password": "DB_NINJA_PASSWORD",
    "database_root_password": "DB_ROOT_PASSWORD"  // Root password (Only used for MySQL)
  },

  // For each application will be created deploy user with
  //   login: app[:app_user]
  //   password: app[:app_user_password] if not set app[:name]+'_PASSWORD'
  // You can change login/password with options: app_user/app_password
  //-------------------
  "applications": [
    {
      "name": "app_name",
      "app_user": "app_user_name",
      "app_password": "app_user_password",	// "app_password": if not set => default app[:name]+'_PASSWORD' 
      "environment": "production", 		// staging
      "web_urls": "example.com",
      "database": "postgresql", 		// mongodb, MySQL
      "server": "passenger",          		// unicorn, thin
      "server_workers_count": 4,                // for passenger, thin, unicorn
      "server_host_default": false,
      "ruby_version": "2.1.4",            // multiple ruby versions for each app are only supported in passenger enterprise
      "modules": ["elasticsearch", "sidekiq"],
      "backup": { "database": true, "files": true } // Default: { database: true, files: true }
      // available modules: elasticsearch, sidekiq, ssl.
      // modules needed to add additional configs to shared folder
    },
    {
      "name": "app_name2",
      "app_user": "app_user_name",
      "app_password": "app_user_password",
      "environment": "production",
      "web_urls": "example2.com",
      "database": "mysql", // mongodb, mysql
      "server": "thin", // unicorn, thin
      "server_workers_count": 4,
      "server_host_default": false,
      "ruby_version": "1.9.3-p550",   // multiple ruby versions are only supported in passenger enterprise
      "modules": []
      // available modules: elasticsearch, sidekiq, ssl.
      // modules needed to add additional configs to shared folder
    }
  ],

    "nginx_redirects": [
      ["www.example1.com", "example1.com"],
      ["www.example2.com", "example2.com"]
    ],

  "newrelic":{
    "license_key": "YOUR_LICENSE_KEY",
    "plugins": { "mysql": true, 
                 "nginx": true,
                 "postgresql": true, 
                 "elasticsearch": true,
                 "rabbitmq": false
                }
  },

    "java": {
      "oracle": { "accept_oracle_download_terms": true }
    },

    //add passenger enterprise token, and set versions
    "nginx": { "nginx_version": "1.6.2",
      "passenger": { "version": "4.0.53",
        "enterprise": { "token": "" 
        }
      }
    },

    // uncomment this line to upgrade ruby version
    // "ruby_build": {
    //   "upgrade": "true"
    // },

  // "elasticsearch": {
  //   "allocated_memory": "1000m"
  // },

    "security": {
      // 22, 80, 443 ports are included by default, add them only to override
      "ports": {
        "3737": "all"  //monit
        "2222": "all"
        //"9200": "127.0.0.1"
        //"9201": ["127.0.0.1", "8.8.8.8"]
      }
    },

    "rails": {
      "packages":[
        "libxml2-dev", "libxslt1-dev", "libncurses5-dev", "libncurses5-dev",
        "libcurl4-gnutls-dev", "wkhtmltopdf", "vim", "nodejs",
        "libpq-dev", "postgresql-client-common", "postgresql-client", "libmysqlclient-dev" // remove pg/mysql client dev if not needed
      ]
    },

    "backup": {
      "s3": {
        "aws_access_key": "YOUR_ACCESS_KEY",
        "aws_secret_key": "YOUR_SECRET_KEY",
        "bucket_name": "BUCKET_NAME",
        "bucket_region": "us-east-1",
        "keep": "10"
      }
    },

  //Monit mail settings
  "monit": {
    "mailserver": {
      "username": "alerts@hostname.pro",
      "password": "MAIL_PASSWORD",
      "host": "smtp.gmail.com",
      "port": "587",
      "encryption": "tlsv1"
    }
  }
}