{
  // This is the list of the recipes that are going to be cooked.
  "run_list": [
    "recipe[deployer_user]",
    "recipe[sudo]",
    "recipe[deployer_ruby]",
    "recipe[ruby_build]",
    "recipe[rbenv::user]",

    "recipe[apt]",
    "recipe[build-essential]",
    "recipe[ohai]",
    "recipe[runit]",
    "recipe[git]",
    "recipe[security]",
    "recipe[imagemagick::devel]",
    "recipe[redis]",
    "recipe[nginx::daemon]",
    "recipe[nginx::redirects]",
    //"recipe[nodejs]",     // you can add node.js to use for sprockets
    "recipe[openssl]",
    //"recipe[memcached]",
    "recipe[mysql]",
    //"recipe[postgresql]",
    //"recipe[mongodb]",
    //"recipe[faye]",
    //"recipe[newrelic]",
    //"recipe[backup]",     // don't forget to add configs at the bottom
    "recipe[java::oracle]",
    "recipe[elasticsearch]",

    "recipe[rails]"
  ],

  "deploy_user": {
    "username": "ninja",
    "password": "NINJA_PASSWORD",
    "ruby_version": "2.1.0",
    "database_host": "localhost",
    "database_username": "ninja",
    "database_password": "DB_NINJA_PASSWORD",
    "database_root_password": "DB_ROOT_PASSWORD"
  },

  "applications": [
    {
      "name": "application_name",
      "environment": "production",
      "web_urls": "example.com",
      "database": "mysql", // mongodb, postgresql
      "server": "unicorn", // passenger, thin
      "server_workers_count": 4,
      "server_host_default": true,
      "modules": []
      // available modules: elasticsearch, sidekiq, websockets.
      // modules needed to add additional configs to shared folder
    }
  ],

  "nginx_redirects": [
    ["www.example.com", "example.com"]
  ],

  "newrelic":{
    "license_key": "YOUR_LICENSE_KEY"
  },

  "java": {
    "oracle": {
      "accept_oracle_download_terms": true
    }
  },

  // uncomment this line to upgrade ruby version
  // "ruby_build": {
  //   "upgrade": "true"
  // },

  // "elasticsearch": {
  //   "allocated_memory": "1000m"
  // },

  "security": {
    // 22, 80, 443 ports are included by default, add them only to override
    "ports": {
      //"3000": "all"
      //"9200": "127.0.0.1"
      //"9201": ["127.0.0.1", "8.8.8.8"]
    }
  },

  "rails": {
    "packages":[
      "libxml2-dev", "libxslt1-dev", "libncurses5-dev", "libncurses5-dev",
      "libcurl4-gnutls-dev", "wkhtmltopdf", "vim", "libmysqlclient-dev"
    ]
  },

  "backup": {
    "s3": {
      "aws_access_key": "YOUR_ACCESS_KEY",
      "aws_secret_key": "YOUR_SECRET_KEY",
      "bucket_name": "BUCKET_NAME"
    }
  }
}