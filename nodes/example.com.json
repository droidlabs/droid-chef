{
  // This is the list of the recipes that are going to be cooked.
  "run_list": [
    "recipe[deployer_user]",
    "recipe[sudo]",
    "recipe[deployer_ruby]",
    "recipe[ruby_build]",
    "recipe[rbenv::user]",

    "recipe[apt]",
    "recipe[build-essential]",
    "recipe[ohai]",
    "recipe[runit]",
    "recipe[git]",
    "recipe[security]",
    "recipe[imagemagick::devel]",
    "recipe[redis]",
    "recipe[passenger::daemon]",
    "recipe[passenger::redirects]",
    //"recipe[nodejs]",     // you can add node.js to use for sprockets
    "recipe[openssl]",
    "recipe[memcached]",
    "recipe[mysql]",
    //"recipe[postgresql]",
    //"recipe[mongodb]",
    //"recipe[faye]",
    //"recipe[newrelic]",
    //"recipe[backup]",     // don't forget to add configs at the bottom
    "recipe[java]",
    "recipe[elasticsearch]",

    "recipe[rails]"
  ],

  "deploy_user": {
    "username": "ninja",
    "password": "NINJA_PASSWORD",
    "ruby_version": "1.9.3-p327",
    "db_username": "ninja",
    "db_password": "DB_NINJA_PASSWORD",
    "db_root_password": "DB_ROOT_PASSWORD"
  },

  "applications": [
    {
      "name": "application_name",
      "environment": "production",
      "web_urls": "example.com",
      "database": "mysql",
      "server": "unicorn",
      "server_workers_count": 10,
      "default": true,
      "modules": []
      // available modules: elasticsearch, sidekiq.
      // modules needed to add additional configs to shared folder
    }
  ],

  "nginx_redirects": [
    ["www.example.com", "example.com"]
  ],

  "elasticsearch": {
    "allocated_memory": "500m"
  },

  "newrelic":{
    "license_key": "YOUR_LICENSE_KEY"
  },

  "rails": {
    "packages":[
      "libxml2-dev", "libxslt1-dev", "libncurses5-dev", "libncurses5-dev", "libcurl4-gnutls-dev", "wkhtmltopdf"
    ]
  },

  "backup": {
    "s3": {
      "aws_access_key": "YOUR_ACCESS_KEY",
      "aws_secret_key": "YOUR_SECRET_KEY",
      "bucket_name": "BUCKET_NAME"
    }
  },

  "ssh_known_hosts": [{
    "id": "github",
    "fqdn": "github.com",
    "rsa": ""
  },{"id": "bitbucket",
    "fqdn": "bitbucket.org",
    "rsa": ""
  }]
}